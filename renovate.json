{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "regexManagers:helmChartYamlAppVersions"
  ],
  "baseBranches": ["main"],
  "timezone": "Europe/Paris",
  "schedule": [ "before 2am" ],
  "prCreation": "immediate",
  "platform": "github",
  "packageRules": [ 
    {
      "matchDatasources": ["github-tags", "github-runners"],
      "groupName": "githubCi"
    }
  ]
}
